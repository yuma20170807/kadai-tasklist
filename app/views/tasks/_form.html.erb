<%=form_with(model: task,local: true) do |f|%>
    <%if task.errors.any?%>
        <div id='error_explanation'>
            <ul>
                <%=render 'layouts/error_message',model: f.object%>
            </ul>
        </div>
    <%end%>
    <div class='row'>
        <div class='col-sm-6 offset-sm-3 '>
            
            <div class='form-group'>
                <%=f.label :content,'タスク'%>
                <%=f.text_field :content,class:'form-control'%>
            </div>
            <div class='form-group'>
                <%=f.label :status,'ステータス'%>
                <%=f.select :status,[['未完了','未完了'],['完了','完了']],class:'form-control'%>
            </div>
        </div>
    </div>
         <div class='row mt-5'>
            <%=link_to '戻る',tasks_path, class:'btn btn-primary  offset-1 col-2'%>
            <%=f.submit '完了',class:'btn btn-primary col-2 offset-6 '%>
            
        </div>
<%end%>